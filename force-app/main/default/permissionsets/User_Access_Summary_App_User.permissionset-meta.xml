<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Permission set for User Access Summary App users. Provides necessary permissions to view user access information and generate compliance reports.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>User Access Summary App User</label>
    
    <!-- Application Permissions -->
    <applicationVisibilities>
        <application>User_Access_Summary</application>
        <visible>true</visible>
    </applicationVisibilities>
    
    <!-- Tab Permissions -->
    <tabSettings>
        <tab>User_Access_Summary_Tab</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    
    <!-- User Permissions -->
    <userPermissions>
        <enabled>true</enabled>
        <name>ViewAllUsers</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>ViewRoles</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>ViewSetup</name>
    </userPermissions>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>User</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Profile</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>PermissionSet</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>PermissionSetAssignment</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>PermissionSetGroup</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
